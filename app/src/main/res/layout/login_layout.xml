<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/chalkboard2_back"
    tools:context=".lecshareClasses.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/LoginTitle"
        android:layout_marginTop="42dp"
        android:textSize="60dp"
        android:src="@drawable/logo1"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:id="@+id/EmailField"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:hint="   Email"
        android:layout_below="@+id/LoginTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordField"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_gravity="center"
        android:hint=" Password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/EmailField"
        android:layout_alignStart="@+id/EmailField" />

    <Button
        android:layout_width="205dp"
        android:layout_height="44dp"
        android:id="@+id/login_btn"
        android:longClickable="false"
        android:src="@drawable/login1"
        android:background="@drawable/btn3"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/PasswordField"
        android:layout_alignLeft="@+id/PasswordField"
        android:layout_alignStart="@+id/PasswordField"
        android:textColor="#4c4c4c"
        android:text="Log in" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Not a member? Join LecShare Now"
        android:id="@+id/register_button"
        android:background="@color/transparent"
        android:textColor="@color/accent_material_dark"
        android:textSize="20sp"
        android:layout_marginBottom="26dp"
        android:ellipsize="middle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="sans" />
</RelativeLayout>
