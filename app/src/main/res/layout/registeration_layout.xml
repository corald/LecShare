<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    android:background="#dfc7ed">

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:hint="Full Name"
        android:padding="10dp"
        android:fontFamily="@string/abc_activity_chooser_view_see_all"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="33dp"
        android:textSize="14sp"
        android:background="@color/colorWhite"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:fontFamily="@string/abc_activity_chooser_view_see_all"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:background="@color/colorWhite" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:fontFamily="@string/abc_activity_chooser_view_see_all"
        android:visibility="visible"
        android:layout_marginTop="17dp"
        android:textSize="14sp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Register"
        android:id="@+id/register"
        android:layout_gravity="center_horizontal"
        android:onClick="insertSchedule"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPass"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password"
        android:fontFamily="@string/abc_activity_chooser_view_see_all"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:background="@color/colorWhite" />

    <Spinner
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:id="@+id/school_spinner"
        android:spinnerMode="dropdown"
        android:theme="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
        android:touchscreenBlocksFocus="false"
        android:transitionGroup="false"
        android:contextClickable="false"
        android:background="@android:drawable/btn_dropdown"
        android:layout_below="@+id/confirmPass"
        android:layout_alignLeft="@+id/confirmPass"
        android:layout_alignStart="@+id/confirmPass"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/logo"
        android:textSize="60dp"
        android:src="@drawable/logo1"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>